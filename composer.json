{
  "name": "direktt/direktt-plugin",
  "description": "Direktt WP Integration Plugin",
  "homepage": "https://github.com/direktt/direktt-plugin/",
  "type": "wordpress-plugin",
  "license": "GPL-2.0+",
  "config": {
    "vendor-dir": "vendor",
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "preferred-install": "source"
  },
  "require": {
    "php": ">=7.4",
    "composer/installers": "~1.0",
    "firebase/php-jwt": "^6.11",
    "html2text/html2text": "^4.3",
    "woocommerce/action-scheduler": "^3.9"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "3.0",
    "coenjacobs/mozart": "*"
  },
  "extra": {
    "mozart": {
      "dep_namespace": "Direktt\\Dependencies\\",
      "dep_directory": "/includes/dependencies/",
      "classmap_directory": "/classes/dependencies/",
      "classmap_prefix": "Direktt_",
      "packages": [
        "html2text\\html2text",
        "firebase\\php-jwt",
        "woocommerce\\action-scheduler"
      ],
      "delete_vendor_directories": true
    }
  },
  "autoload": {
    "psr-4": {
      "Direktt\\Dependencies\\": "includes/dependencies/"
    }
  },
  "scripts": {
    "dist": [
      "wsl rm -f ../direktt.zip",
      "wsl zip -r ../direktt.zip . -x '.parcel-cache/*' '.vscode/*' '.git/*' 'node_modules/*' 'vendor/composer/installers/.github/*' 'vendor/firebase/*' 'vendor/html2text/*' '*.map' 'changes.diff' 'composer.lock' 'package.json' 'package-lock.json' '.gitignore' 'languages/*' 'public/scss/*' 'admin/scss/*' 'admin/src/*' 'classes/*'"
    ]
  }
}
